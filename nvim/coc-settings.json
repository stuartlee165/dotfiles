{
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        }
    },
    "pyright.enable": true,
    "pyright.inlayHints.functionReturnTypes": false,
    "pyright.inlayHints.variableTypes":false,
    "python.linting.pylintEnabled": true,
    "python.linting.enabled": true
}
